generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id       Int     @id @default(autoincrement())
  user_name     String  @db.VarChar(200)
  email         String? @db.VarChar(500)
  password      String? @db.VarChar(500)
  refresh_token String  @db.VarChar(500)
  Vote          Vote?
}

model Vote {
  vote_id    Int      @id @default(autoincrement())
  user_id    Int
  status     Boolean
  title      String   @db.VarChar(25)
  count      Int?
  created_at DateTime @default(now())
  max_count  Int?
  pictures   String? @db.VarChar(800)
  Picture    Picture?
  User       User     @relation(fields: [vote_id], references: [user_id], onDelete: Cascade, map: "user_id")
}

model Picture {
  picture_id Int    @id @unique @default(autoincrement())
  url        String @db.VarChar(800)
  count      Int
  vote_id    Int
  Vote       Vote   @relation(fields: [picture_id], references: [vote_id], onDelete: Cascade, map: "vote_id")
}
